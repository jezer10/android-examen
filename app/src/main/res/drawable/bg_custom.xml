<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"></solid>
        </shape>
    </item>

    <item android:top="-20dp" android:height="1000dp">

        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape
                android:shape="rectangle">
                <solid android:color="#c00f0f"></solid>
            </shape>
        </rotate>
    </item>

    <item android:top="400dp" android:height="1000dp">
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape
                android:shape="rectangle">
                <solid android:color="#f0f505"></solid>
            </shape>
        </rotate>

    </item>

</layer-list>