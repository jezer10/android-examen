<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DotActivity"
    android:background="#c00f0f">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dot_nav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="32dp"
        android:paddingVertical="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >


        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_dot_main_text"
            android:text="Bienvenido JosuÃ©"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <ImageView
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp"

            app:layout_constraintLeft_toRightOf="@id/tv_dot_main_text"
            android:src="@drawable/user"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dot_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_dot_nav"
        android:paddingHorizontal="32dp">
        <ImageView
            android:id="@+id/back_button"
            android:src="@drawable/back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />
        <Button
            android:id="@+id/btn_dot_add"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#f0f505"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="Registrar Vehiculo"
            android:paddingVertical="12dp"
            android:textSize="20sp"
            android:drawableTint="@color/black"
            android:textAllCaps="false"
            />
        <ImageView
            android:layout_marginHorizontal="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/car"
            app:layout_constraintRight_toRightOf="@id/btn_dot_add"
            app:layout_constraintTop_toTopOf="@id/btn_dot_add"
            app:layout_constraintBottom_toBottomOf="@id/btn_dot_add"
            android:elevation="16dp"/>
        <Button
            android:id="@+id/btn_dot_edit"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_dot_add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#f0f505"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="Editar Vehiculo"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            android:textSize="20sp"
            android:drawableTint="@color/black"/>
        <ImageView
            android:layout_marginHorizontal="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/update"
            app:layout_constraintRight_toRightOf="@id/btn_dot_edit"
            app:layout_constraintTop_toTopOf="@id/btn_dot_edit"
            app:layout_constraintBottom_toBottomOf="@id/btn_dot_edit"
            android:elevation="16dp"/>
        <Button
            android:id="@+id/btn_dot_delete"
            android:textAllCaps="false"

            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_dot_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#f0f505"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="Visualizar Vehiculos"
            android:paddingVertical="12dp"
            android:textSize="20sp"
            android:drawableTint="@color/black"/>
        <ImageView
            android:layout_marginHorizontal="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/car"
            app:layout_constraintRight_toRightOf="@id/btn_dot_delete"
            app:layout_constraintTop_toTopOf="@id/btn_dot_delete"
            app:layout_constraintBottom_toBottomOf="@id/btn_dot_delete"
            android:elevation="16dp"/>
        <Button
            android:textAllCaps="false"

            android:id="@+id/btn_dot_read"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_dot_delete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#f0f505"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="Eliminar Vehiculos"
            android:paddingVertical="12dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_marginHorizontal="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/delete"
            app:layout_constraintRight_toRightOf="@id/btn_dot_read"
            app:layout_constraintTop_toTopOf="@id/btn_dot_read"
            app:layout_constraintBottom_toBottomOf="@id/btn_dot_read"
            android:elevation="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>