<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:paddingHorizontal="36dp"
    tools:context=".RegisterActivity">
    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <Button
        android:id="@+id/btn_register_back_to_login"

        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:text="Regresar"
        android:drawablePadding="16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:textColor="@color/white"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <EditText
            android:id="@+id/et_register_firstname"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_custom_input"
            android:drawableStart="@drawable/ic_outline_account_circle_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/white"
            android:hint="Nombres"
            android:paddingLeft="16dp"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:paddingRight="48dp"/>
        <EditText
            android:id="@+id/et_register_lastname"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_custom_input"
            android:drawableStart="@drawable/ic_outline_account_circle_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/white"
            android:hint="Apellidos"
            android:paddingLeft="16dp"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:paddingRight="48dp"/>
        <EditText
            android:id="@+id/et_register_username"

            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_custom_input"
            android:drawableStart="@drawable/ic_outline_account_circle_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/white"
            android:hint="Usuario"
            android:paddingLeft="16dp"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:paddingRight="48dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_register_password"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/bg_custom_input"
                android:drawableStart="@drawable/ic_outline_lock_24"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:hint="Contraseña"
                android:paddingLeft="16dp"
                android:paddingRight="48dp"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                />
            <ImageButton
                android:id="@+id/ib_register_password_toggle"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_baseline_visibility_24"
                android:backgroundTint="@android:color/transparent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_register_confirm_password"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/bg_custom_input"
                android:drawableStart="@drawable/ic_outline_lock_24"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:hint="Repetir Contraseña"
                android:paddingLeft="16dp"
                android:paddingRight="48dp"
                android:inputType="textPassword"
                android:textColorHint="@color/white" />
            <ImageButton
                android:id="@+id/ib_register_confirm_password_toggle"

                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_baseline_visibility_24"
                android:backgroundTint="@android:color/transparent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_custom_button"
            android:text="Registrar"
            app:backgroundTint="@color/teal_200"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>