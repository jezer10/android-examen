<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:background="@drawable/bg_custom"
    android:paddingHorizontal="48dp">
    <ImageView
        android:id="@+id/logo_f"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ferrari_logo"
        android:layout_marginVertical="128dp"/>

    <TextView
        android:id="@+id/tv_test_title"
        android:layout_marginVertical="16dp"

        app:layout_constraintTop_toBottomOf="@id/logo_f"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_test_login_hint"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_test_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia sesion para continuar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"/>
    <EditText
        android:id="@+id/et_test_username"
        android:layout_marginVertical="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_test_login_hint"
        android:padding="16dp"
        android:hint="Usuario"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:drawableTint="@color/white"
        android:drawableEnd="@drawable/ic_outline_person_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_test_user_input"/>
    <EditText
        android:id="@+id/et_test_password"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_test_username"
        android:padding="16dp"
        android:hint="ContraseÃ±a"
        android:backgroundTint="#212c9a"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:drawableTint="@color/white"
        android:drawableEnd="@drawable/ic_outline_lock_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_test_user_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>